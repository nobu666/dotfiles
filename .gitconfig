[user]
    name = Nobutoshi Ogata
    email = ogata.nobu@gmail.com
[core]
    editor = /usr/bin/vim
    pager = cat
[alias]
    co = checkout
    st = status
    ci = commit
    di = diff
    br = branch
    up = push
    pull = pull --rebase --no-edit
    merge = merge --no-ff
    oneline = log --pretty=oneline
    logs = log --graph --decorate --pretty=format:'%ad [%cn] <c:%h t:%t p:%p> %n %Cgreen%d%Creset %s %n' --stat
    logall = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
    br = branch
    ba = branch -a
    bm = branch --merged
    bn = branch --no-merged
    gr = grep
    gn = grep -n
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
    interactive = auto
    grep = auto
