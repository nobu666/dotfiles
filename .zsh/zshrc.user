echo "Loading $HOME/.zsh/zshrc.user"

# auto confs maker
function zsh-confstuffer() {
    if [ -f ~/.zsh_confs/ ]; then
        rm -rf ~/.zsh_confs/
    else
        mkdir ~/.zsh_confs/
    fi

    cp $ZDOTDIR/.zlogin ~/.zsh_confs/
    cp $ZDOTDIR/.zshrc ~/.zsh_confs/
    cp $ZDOTDIR/.zshenv ~/.zsh_confs/
    cp $ZDOTDIR/.zprofile ~/.zsh_confs/

    mkdir ~/.zsh_confs/.zsh/; chmod 700 ~/.zsh_confs/.zsh/

    cp $ZUSERDIR/* ~/.zsh_confs/.zsh/

    touch ~/.zsh_confs/.zsh_history
    chmod 600 ~/.zsh_confs/.zsh_history

    cd ~/.zsh_confs/

    tar zcf $HOME/backup/zshconf-$SYSTEM.tar.gz .z*
    chmod 644 $HOME/backup/zshconf-$SYSTEM.tar.gz

    rm -rf ~/.zsh_confs/
    cd - >& /dev/null

    echo "conf file is ..."
    ls -lo ~/backup/zshconf*
}

